<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_help"
    android:paddingLeft="5dp"
    android:scrollbarSize="0dp"
    android:verticalScrollbarPosition="left">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbarSize="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:text="Help Service....."
                android:textColor="@color/black"
                android:textSize="39dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider5"
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="305dp"
                android:layout_height="193dp"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/border_help"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="TextView" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:text="Quick Links....."
                android:textColor="@color/black"
                android:textSize="38dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider6"
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="1dp"
                android:background="@color/black" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="1"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:background="@color/btn_bg_color_help"/>

            <Button
                android:id="@+id/btn_enterevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="2"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:background="@color/btn_bg_color_help"/>

            <Button
                android:id="@+id/btn_buyticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="3"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:background="@color/btn_bg_color_help"
            />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="4"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:background="@color/btn_bg_color_help"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="5"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:background="@color/btn_bg_color_help"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="377dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:text="Need more help??"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Write your querrie here"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button8"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginStart="235dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="15dp"
                android:text="Submit"
                app:backgroundTint="@color/black" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
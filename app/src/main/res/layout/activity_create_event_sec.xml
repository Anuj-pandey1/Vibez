<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_light"
    android:layout_height="match_parent"
    tools:context=".Create_event_sec_Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border_profile">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:gravity="center_horizontal"
            android:text=" --TERMS AND CONDITIONS-- "
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/event_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="No. of tickets"
            android:inputType="number"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black" />

        <EditText
            android:id="@+id/event_tprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_ticket"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="price of ticket"
            android:inputType="number"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black" />

        <EditText
            android:id="@+id/event_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_tprice"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Promotion(Y/N)"
            android:inputType="textPersonName"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black" />



        <Button
            android:id="@+id/event_sub"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="325dp"
            android:gravity="center_horizontal"
            android:text="Submit"
            app:backgroundTint="@color/black" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:gravity="center_horizontal"
            android:text="Basic charge: 2000rs \n Promotion charge: 1000rs \n We are glad to serve!!"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVPAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="385dp"
            android:gravity="center_horizontal"
            android:text="YOUR TOTAL BILL IS :"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/total_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="425dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Your total cost"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textColorHint="@color/black"
            android:textColorLink="@color/black" />

        <Button
            android:id="@+id/button7"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="460dp"
            android:gravity="center_horizontal"
            android:text="Pay"
            app:backgroundTint="@color/black" />
    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_light"
    tools:context=".CreateEventFirstActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/border_profile">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:text="ENTER EVENT DETAILS"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view"
                    android:layout_width="108dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"
                    android:background="@color/black" />

                <ImageView
                    android:id="@+id/event_pic"
                    android:layout_width="100sp"
                    android:layout_height="100sp"

                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180dp"
                    android:src="@mipmap/ic_pic" />

                <EditText
                    android:id="@+id/event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:hint="Event Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="355dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:hint="location"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="415dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:hint="date"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="475dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:hint="Time"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <ImageView
                    android:id="@+id/event_map"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="595dp"
                    android:src="@mipmap/ic_pic" />

                <EditText
                    android:id="@+id/event_info"
                    android:layout_width="wrap_content"
                    android:layout_height="235dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="750dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="bottom|center_horizontal"
                    android:hint="Info"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/event_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1010dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:hint="Emergency Contact no. for audience"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <Button
                    android:id="@+id/btnnextsec"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1125dp"
                    android:layout_marginBottom="30dp"
                    android:text="Next"
                    app:backgroundTint="@color/black1" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="150dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:text="Select your event pic here-"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="535dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:text="Select the event map-"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />

                <AutoCompleteTextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="295dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_horizontal"
                    android:hint="Select type of event"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>